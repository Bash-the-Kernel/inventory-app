<%- include('../layouts/main') %>

<div class="container">
  <h1><%= category.name %></h1>
  <p><%= category.description %></p>

  <h2>Items in this category:</h2>
  <% if (items.length > 0) { %>
    <ul>
      <% items.forEach(item => { %>
        <li>
          <a href="/items/<%= item.id %>"><%= item.name %></a>
          - $<%= item.price %> (Qty: <%= item.quantity %>)
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No items in this category yet.</p>
  <% } %>

  <div class="actions">
    <a href="/categories/<%= category.id %>/edit" class="button">Edit Category</a>
    <form action="/categories/<%= category.id %>/delete" method="POST" style="display: inline;">
      <input type="password" name="adminPassword" placeholder="Admin Password" required>
      <button type="submit" class="button danger">Delete Category</button>
    </form>
  </div>
</div>